<UserControl x:Class="Inevent.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inevent.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFFCFBFE" RenderTransformOrigin="0.417,0.527">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderThickness="0,0,0,2">
            <Border.BorderBrush>
                <SolidColorBrush Color="#FFEAEAEA" Opacity="0.5"/>
            </Border.BorderBrush>
            <Grid Grid.Row="0" Background="White">
                <Label Content="Inevent" FontFamily="/Inevent;component/Fonts/#Open Sans ExtraBold" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Background="{x:Null}" FontSize="24" Margin="0" MinWidth="160" MinHeight="70" BorderThickness="0,0,2,0" Foreground="#FF525252">
                    <Label.BorderBrush>
                        <SolidColorBrush Color="#FFEAEAEA" Opacity="0.5"/>
                    </Label.BorderBrush>
                </Label>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,0,0">
                <Button Width="Auto" Content="Home" FontSize="18" FontFamily="/Inevent;component/Fonts/#Open Sans" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalContentAlignment="Left" Margin="0,0,0,10"/>
                <Button Width="Auto" Content="Find event" FontSize="18" FontFamily="/Inevent;component/Fonts/#Open Sans" HorizontalContentAlignment="Left" BorderBrush="{x:Null}" Background="{x:Null}" Margin="0,0,0,10"/>
                <Button Width="Auto" Content="Create event" FontSize="18" FontFamily="/Inevent;component/Fonts/#Open Sans" HorizontalContentAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                <Label  x:Name="Username" Content="Hello Username!" FontWeight="Bold"  FontSize="16"/>
                <Label Content="Upcoming events"></Label>
            </StackPanel>
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <!-- Sekcja today/tomorrow/this week/choose data-->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0" Content="Today" />
                    <Button Grid.Row="0" Grid.Column="1" Content="Tomorrow" />
                    <Button Grid.Row="1" Grid.Column="0" Content="This week" />
                    <Button Grid.Row="1" Grid.Column="1" Content="Choose data" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
